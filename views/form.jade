form(method="POST", enctype="multipart/form-data", action='')
  input#file-cv.file.no-select(type='file', name='cv', data-multiple-caption='Файлов добавлено: {count} ')
  label(for='file-cv')
    .file-no-select
      svg(width='18', height='18', viewBox='0 0 18 18', fill='none', xmlns='http://www.w3.org/2000/svg')
        path(d='M17 16V18H1V16H17ZM8 3.83V14H10V3.83L13.59 7.41L15 6L9 0L3 6L4.41 7.41L8 3.83Z', fill='#5C6EE5')
      span Загрузить резюме
    .file-select
      svg(width='14', height='18', viewBox='0 0 14 18', fill='none', xmlns='http://www.w3.org/2000/svg')
        path(d='M9.83 0H0V18H14V4.17L9.83 0ZM12 16H2V2H7V7H12V16ZM9 5V2L12 5H9Z', fill='#08114D', fill-opacity='0.4')
      span.file-name
      svg.del(width='14', height='14', viewBox='0 0 14 14', fill='none', xmlns='http://www.w3.org/2000/svg', style='float: right; margin: 3px -3px 3px 0;')
        path(d='M1.41 14L7 8.41L12.59 14L14 12.59L8.41 7L14 1.41L12.59 0L7 5.59L1.41 0L0 1.41L5.59 7L0 12.59L1.41 14Z')
  
  .divider
    span или
    
  label(for='inpt-email') Электронная почта *
  input#inpt-email.inpt(type='email', name='email', placeholder='ivanivanov@yandex.ru')
    
  label(for='inpt-fio') Ф. И. О.
  input#inpt-fio.inpt(type='text', name='fio', placeholder='Иванов Иван Иванович')
    
  label(for='inpt-phone') Номер телефона
  input#inpt-phone.inpt(type='text', name='phone', placeholder='+7 912 345-67-89')
    
  label(for='inpt-link') Ссылка на социальную сеть/Linkedin/Github
  input#inpt-link.inpt(type='text', name='link', placeholder='')
    
  label(for='inpt-socs') Ссылка на Telegram/WhatsApp/Skype
  input#inpt-socs.inpt(type='text', name='socs', placeholder='')
  
  
  input(type='hidden', name='id', value='#{vacancy ? vacancy.id : "no_id"}')
    
  button.btn(type='submit', name='send', value='send') Откликнуться

  script.
    $(function() {
      $('#inpt-email').attr('required', '');
      
      $('#file-cv').on('change', function(e) {
        if(this.files && this.files.length > 0) {
          $('#inpt-email').removeAttr('required');
        } else {
          $('#inpt-email').attr('required', '');
        }
      });
    });
